<application>
  <name>Interactive Objects Learning for Object Tracking</name>
  <module>
    <name>lbpExtract</name>
    <parameters> --neighbours 10 --maxArcLength 20000 --maxArea 12000</parameters>
    <node>icub21</node>
  </module>
  <module>
    <name>SFM</name>
    <node>icub21</node>
  </module>
  <module>
    <name>caffeCoder</name>
    <parameters>--from caffeCoder_resnet.ini</parameters>
    <node>icub-cuda</node>
  </module>
  <module>
    <name>linearClassifierModule</name>
    <parameters> --BufferSize 1 --CSVM 1.0 --databaseFolder IOLDatabase_object_tracking --WeightedSVM 1</parameters>
    <node>icub-cuda</node>
  </module>
  <module>
    <name>himrepClassifier</name>
    <node>icub-cuda</node>
  </module>
  <module>
    <name>iolStateMachineHandler</name>
    <node>icub21</node>
  </module>
  <module>
    <name>objectsPropertiesCollector</name>
    <parameters>--name memory --db memory_object_tracking.ini</parameters>
    <node>icub21</node>
  </module>
  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/lbp/segmented</parameters>
    <node>localhost</node>
  </module>
  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/iolStateMachineHandler/img:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/lbpExtract/image:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  <connection>
    <from>/iolStateMachineHandler/imgClassifier:o</from>
    <to>/himrepClassifier/img:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  <connection>
    <from>/lbpExtract/blobs:o</from>
    <to>/iolStateMachineHandler/blobs:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/iolStateMachineHandler/classify:rpc</from>
    <to>/himrepClassifier/rpc</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/lbpExtract/segmentedlbp:o</from>
    <to>/object-tracking/lbp/segmented</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/iolViewer/manager/localizer/out</from>
    <to>/iolStateMachineHandler/histObjLocation:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  <connection>
    <from>/iolStateMachineHandler/memory:rpc</from>
    <to>/memory/rpc</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/himrepClassifier/img:o</from>
    <to>/caffeCoder/img:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  <connection>
    <from>/caffeCoder/code:o</from>
    <to>/himrepClassifier/features:i</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/himrepClassifier/features:o</from>
    <to>/linearClassifier/features:i</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/linearClassifier/scores:o</from>
    <to>/himrepClassifier/scores:i</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/himrepClassifier/classify:rpc</from>
    <to>/linearClassifier/rpc</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/caffeCoder/img:o</from>
    <to>/himrepClassifier/SIFTimg:i</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/himrepClassifier/opc</from>
    <to>/memory/rpc</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/icub/camcalib/right/out</from>
    <to>/SFM/right:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/SFM/left:i</to>
    <protocol>mjpeg</protocol>
  </connection>
  <connection>
    <from>/iolStateMachineHandler/get3d:rpc</from>
    <to>/SFM/rpc</to>
    <protocol>tcp</protocol>
  </connection>
</application>
