<application>
  <name>Object Tracking on iCub</name>

  <module>
    <name>object-tracking</name>
    <parameters></parameters>
    <node>localhost</node>
  </module>

  <module>
    <name>object-tracking-viewer</name>
    <parameters>--context object-tracking-viewer-icub</parameters>
    <node>localhost</node>
  </module>

  <module>
    <name>object-tracking-depth</name>
    <parameters></parameters>
    <node>localhost</node>
  </module>

  <module>
    <name>object-tracking-ground-truth</name>
    <parameters></parameters>
    <node>localhost</node>
  </module>

  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/viewer/masks:i</parameters>
    <node>localhost</node>
    <prefix></prefix>
  </module>

  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/viewer/segmentation:i</parameters>
    <node>localhost</node>
    <prefix></prefix>
  </module>

  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/viewer/validation:i</parameters>
    <node>localhost</node>
    <prefix></prefix>
  </module>

  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/viewer/aruco:i</parameters>
    <node>localhost</node>
    <prefix></prefix>
  </module>

  <!-- To object-tracking-depth -->

  <connection>
    <from>/icub/camcalib/right/out</from>
    <to>/object-tracking-depth/SFM/right:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/object-tracking-depth/SFM/left:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <!-- To object-tracking-viewer -->

  <connection>
    <from>/object-tracking-depth/SFM/depth:o</from>
    <to>/object-tracking-viewer/depthImage:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/object-tracking-ground-truth/estimate:o</from>
    <to>/object-tracking-viewer/ground-truth:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/object-tracking-viewer/rgbImage:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/object-tracking/estimate:o</from>
    <to>/object-tracking-viewer/estimate:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/torso/state:o</from>
    <to>/object-tracking-viewer/hand/right/torso:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/right_arm/state:o</from>
    <to>/object-tracking-viewer/hand/right/right_arm:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/handTracking/VisualSIS/left/estimates:o</from>
    <to>/object-tracking-viewer/hand/right/hand_pose:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <!-- To object-tracking-ground-truth -->

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/object-tracking-ground-truth/rgbImage:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/icub/torso/state:o</from>
    <to>/object-tracking-ground-truth/icub/torso:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/head/state:o</from>
    <to>/object-tracking-ground-truth/icub/head:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <!-- To object-tracking -->

  <connection>
    <from>/object-tracking-depth/SFM/depth:o</from>
    <to>/object-tracking/depthImage:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/object-tracking/rgbImage:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/icub/torso/state:o</from>
    <to>/object-tracking/icub-hand-occlusion/right/icub/torso:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/torso/state:o</from>
    <to>/object-tracking/icub-arm-model/occlusion/right/torso:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/handTracking/VisualSIS/left/estimates:o</from>
    <to>/object-tracking/icub-hand-occlusion/right/hand_pose:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <connection>
    <from>/icub/right_arm/state:o</from>
    <to>/object-tracking/icub-arm-model/occlusion/right/right_arm:i</to>
    <protocol>fast_tcp</protocol>
  </connection>

  <!-- To yarp viewers -->

  <connection>
    <from>/object-tracking-ground-truth/estimateMarkerImage:o</from>
    <to>/object-tracking/viewer/aruco:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/object-tracking/segmentation:o</from>
    <to>/object-tracking/viewer/segmentation:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/instanceSegmenter/RGBimage:o</from>
    <to>/object-tracking/viewer/masks:i</to>
    <protocol>mjpeg</protocol>
  </connection>

  <connection>
    <from>/object-tracking/validator2d/validationImage:o</from>
    <to>/object-tracking/viewer/validation:i</to>
    <protocol>mjpeg</protocol>
  </connection>

