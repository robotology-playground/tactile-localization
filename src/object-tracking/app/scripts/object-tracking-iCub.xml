<application>
  <name>Object Tracking on iCub</name>

  <module>
    <name>object-tracking</name>
    <parameters></parameters>
    <node>icub-cuda</node>
  </module>

  <module>
    <name>object-tracking-viewer</name>
    <parameters></parameters>
    <node>icub-cuda</node>
  </module>

  <module>
    <name>object-tracking-depth</name>
    <parameters></parameters>
    <node>icub-cuda</node>
  </module>

  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/viewer/disp:i</parameters>
    <node>localhost</node>
    <prefix></prefix>
  </module>

  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/viewer/hull:i</parameters>
    <node>localhost</node>
    <prefix></prefix>
  </module>

  <module>
    <name>yarpview</name>
    <parameters>--name /object-tracking/viewer/mask:i</parameters>
    <node>localhost</node>
    <prefix></prefix>
  </module>

  <connection>
    <from>/icub/camcalib/right/out</from>
    <to>/object-tracking/SFM/right:i</to>
    <protocol>mjpeg</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/object-tracking/SFM/left:i</to>
    <protocol>mjpeg</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/object-tracking/SFM/disp:o</from>
    <to>/object-tracking/viewer/disp:i</to>
    <protocol>tcp</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/object-tracking-depth/SFM/depth:o</from>
    <to>/object-tracking-viewer/depth:i</to>
    <protocol>tcp</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/object-tracking/opc/rpc:o</from>
    <to>/memory/rpc</to>
    <protocol>tcp</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/object-tracking/estimate:o</from>
    <to>/object-tracking-viewer/estimate:i</to>
    <protocol>tcp</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/object-tracking/hull:o</from>
    <to>/object-tracking/viewer/hull:i</to>
    <protocol>mjpeg</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/object-tracking/mask:o</from>
    <to>/object-tracking/viewer/mask:i</to>
    <protocol>mjpeg</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/object-tracking/cam/left:i</to>
    <protocol>mjpeg</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

  <connection>
    <from>/icub/camcalib/left/out</from>
    <to>/object-tracking-viewer/cam/left:i</to>
    <protocol>mjpeg</protocol>
    <!-- <protocol>tcp</protocol> -->
  </connection>

</application>
